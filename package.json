    "@electron-forge/maker-zip": "^6.0.5",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.1.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.3",
    "vite": "^4.1.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@types/crypto-js": "^4.1.1",
    "autoprefixer": "^10.4.13",
    "crypto-js": "^4.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "match-sorter": "^6.3.1",
    "pdfmake": "^0.2.7",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.9.0",
    "react-viewport-list": "^7.1.1",
    "sequelize": "^6.29.0",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.2.7",
    "validator": "^13.9.0"
  }
